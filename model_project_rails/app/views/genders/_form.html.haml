= form_for @gender, data: {turbo: true} do |f|
  - if @gender.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gender.errors.count, "error")} prohibited this gender from being saved:"
      %ul
        - @gender.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  %br
  .actions
    = f.submit 'Salvar', class: "btn btn-success"
