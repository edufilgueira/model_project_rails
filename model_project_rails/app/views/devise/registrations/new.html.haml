.vh-100.d-flex.justify-content-center.align-items-center{style:"background-color: #722cfa;"}
  .col-md-4.p-5.shadow-sm.border.rounded-3{style:"background-color: #fff;"}
    %h2.text-center.mb-4.text-primary
      Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .mb-3
        = f.label :email
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border border-primary"
      .mb-3
        = f.label :password
        - if @minimum_password_length
          %em
            = @minimum_password_length
            characters minimum
        = f.password_field :password, autocomplete: "current-password", class:"form-control border border-primary"
      .mb-3
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control border border-primary"
      .d-grid
        = f.submit "Sign up", class:"btn btn-primary"
    .mt-3
      %p.mb-0.text-center
        = render "devise/shared/links"
  