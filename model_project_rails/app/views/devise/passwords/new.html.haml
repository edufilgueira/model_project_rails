.vh-100.d-flex.justify-content-center.align-items-center{style:"background-color: #722cfa;"}
  .col-md-4.p-5.shadow-sm.border.rounded-3{style:"background-color: #fff;"}
    %h2.text-center.mb-4.text-primary
      Forgot your password?
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .mb-3
        = f.label :email
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border border-primary"
      .d-grid
        = f.submit "Send me reset password instructions", class:"btn btn-primary"
    .mt-3
      %p.small.mb-0.text-center
        = render "devise/shared/links"
